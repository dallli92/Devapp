<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent">

    <ImageView
            android:layout_width="0dp"
            android:layout_height="300dp" app:srcCompat="@drawable/devslopesbanner"
            android:id="@+id/imageView2" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent" android:scaleType="centerCrop"/>
    <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp" app:srcCompat="@drawable/devslopesprofilelogo"
            android:id="@+id/logo" android:layout_marginTop="240dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="60dp" android:layout_marginStart="60dp"/>
    <TextView
            android:text="DALLLI92"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView3" android:textSize="30sp" app:layout_constraintStart_toEndOf="@+id/logo"
            android:layout_marginLeft="64dp" android:layout_marginStart="64dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView2" android:layout_marginTop="24dp"/>
    <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp" app:srcCompat="@drawable/camerabutton"
            android:id="@+id/imageView18"
            app:layout_constraintStart_toEndOf="@+id/textView3" app:layout_constraintHorizontal_bias="0.9"
            app:layout_constraintEnd_toStartOf="@+id/imageView19"
            app:layout_constraintHorizontal_chainStyle="packed" app:layout_constraintTop_toTopOf="@+id/imageView19"
            app:layout_constraintBottom_toBottomOf="@+id/imageView19"/>
    <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp" app:srcCompat="@drawable/favoritebutton"
            android:id="@+id/imageView19"
            app:layout_constraintStart_toEndOf="@+id/imageView18" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toStartOf="@+id/imageView20" app:layout_constraintTop_toTopOf="@+id/imageView20"
            app:layout_constraintBottom_toBottomOf="@+id/imageView20" android:layout_marginRight="32dp"
            android:layout_marginEnd="32dp" android:layout_marginLeft="32dp" android:layout_marginStart="32dp"/>
    <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp" app:srcCompat="@drawable/inboxbutton"
            android:id="@+id/imageView20"
            app:layout_constraintStart_toEndOf="@+id/imageView19" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toStartOf="@+id/button2" android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView2"/>
    <Button
            android:text="Dashboard"
            android:layout_width="250dp"
            android:layout_height="80dp"
            android:id="@+id/button2" android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView2" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            android:background="@drawable/rounded_gradient" android:textColor="@android:color/background_light"/>
    <android.support.constraint.Guideline android:layout_width="wrap_content" android:layout_height="wrap_content"
                                          android:id="@+id/guideline3"
                                          android:orientation="vertical"
                                          app:layout_constraintGuide_percent="0.5"/>
    <ImageView
            android:layout_width="0dp"
            android:layout_height="0dp" app:srcCompat="@drawable/codeimage"
            android:id="@+id/imageView21"
            android:scaleType="centerCrop"
            app:layout_constraintTop_toBottomOf="@+id/logo"
            app:layout_constraintEnd_toStartOf="@+id/guideline3"
            app:layout_constraintDimensionRatio="16:9" android:layout_marginRight="16dp"
            android:layout_marginEnd="16dp" android:layout_marginTop="50dp"/>
    <ImageView
            android:layout_width="0dp"
            android:layout_height="0dp" app:srcCompat="@drawable/dataimage"
            android:id="@+id/imageView22"
            android:scaleType="centerCrop"
            app:layout_constraintTop_toTopOf="@+id/imageView21"
            android:layout_marginStart="16dp" app:layout_constraintStart_toStartOf="@+id/guideline3"
            android:layout_marginLeft="16dp" app:layout_constraintDimensionRatio="16:9"/>
    <ImageView
            android:layout_width="0dp"
            android:layout_height="0dp" app:srcCompat="@drawable/imagesimage"
            android:id="@+id/imageView23"
            android:scaleType="centerCrop" app:layout_constraintEnd_toStartOf="@+id/guideline3"
            android:layout_marginEnd="16dp" android:layout_marginRight="16dp" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView21" android:layout_marginBottom="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@+id/imageView21"
            app:layout_constraintDimensionRatio="16:9" app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintVertical_bias="0.0"/>
    <ImageView
            android:layout_width="0dp"
            android:layout_height="0dp" app:srcCompat="@drawable/videosimage"
            android:id="@+id/imageView24"
            android:scaleType="centerCrop"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="16dp"
            android:layout_marginStart="16dp" app:layout_constraintStart_toStartOf="@+id/guideline3"
            android:layout_marginLeft="16dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView22" app:layout_constraintEnd_toEndOf="@+id/imageView22"
            app:layout_constraintDimensionRatio="16:9"/>
</android.support.constraint.ConstraintLayout>